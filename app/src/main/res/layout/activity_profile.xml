<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@drawable/bjpbg"
    tools:context="com.fmak.mlacngupta.RegisterActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="USER PROFILE"
        android:textColor="@color/colorAccent"
        android:textSize="30dp"
        android:textStyle="bold"
           />

  <android.support.design.widget.TextInputLayout
      android:id="@+id/name1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      android:layout_marginTop="15dp"
      android:layout_below="@+id/textView2"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_alignParentRight="true"
      android:layout_alignParentEnd="true"
      >
    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:background="@drawable/edittextbg"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:hint="ENTER FULL NAME"
        android:drawableRight="@drawable/name"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    </android.support.design.widget.TextInputLayout>


  <android.support.design.widget.TextInputLayout
      android:id="@+id/fname1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/name1"
      android:layout_alignParentStart="true"
      android:layout_marginTop="10dp"
      android:layout_alignParentEnd="true"
      >
  <EditText
        android:id="@+id/fname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="FATHER's NAME"
        android:background="@drawable/edittextbg"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:drawableRight="@drawable/ic_user"
        android:layout_below="@+id/name1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true" />
  </android.support.design.widget.TextInputLayout>

  <android.support.design.widget.TextInputLayout
      android:id="@+id/email1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:layout_below="@+id/fname1"
      android:layout_alignParentStart="true"
      android:layout_alignParentEnd="true"
      >
  <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="EMAIL ADDRESS"
        android:background="@drawable/edittextbg"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:drawableRight="@drawable/ic_email"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/fname1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />
</android.support.design.widget.TextInputLayout>

  <android.support.design.widget.TextInputLayout
      android:id="@+id/mobile1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:layout_below="@+id/email1"
      android:layout_alignParentStart="true"
      android:layout_alignParentEnd="true"
      >
    <EditText
        android:id="@+id/mobile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="phone"
        android:hint="MOBILE NUMBER"
        android:background="@drawable/edittextbg"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:drawableRight="@drawable/ic_mobile"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/email1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />
</android.support.design.widget.TextInputLayout>
    <Button
        android:id="@+id/bsave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE PROFILE"
        android:textStyle="bold"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="48dp"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
