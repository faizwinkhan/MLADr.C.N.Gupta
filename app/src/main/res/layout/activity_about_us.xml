<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bjpbg"
    tools:context="com.fmak.mlacngupta.AboutUs">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/mla_icon"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_marginBottom="39dp"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_toEndOf="@+id/imageView3"
        android:layout_toRightOf="@+id/imageView3"
        android:textStyle="bold"
        android:textSize="17dp"
        android:textColor="@color/colorAccent"
        android:text="About App" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="#FFF"
        android:text="शहर के नागरिकों की शिकायतों / सुझावों को दर्ज करने के लिए मोबाइल ऐप लॉन्च किया है। इस मोबाइल ऐप ऑनलाइन पोर्टल से जुड़ा हुआ है, जहां शिकायतें / सुझाव वेब के माध्यम से भी पंजीकृत किए जा सकते हैं । \n\nमोबाइल फोन के माध्यम से शिकायत के पंजीकरण और ट्रैकिंग के लिए एक तेज़ और उपयोगकर्ता के अनुकूल इंटरफ़ेस प्रदान किया गया है। प्रत्येक शिकायत एक अद्वितीय संदर्भ संख्या प्रदान की जाएगी। \n\nशिकायतों की प्रगति को ट्रैक करने, रिमाइंडर भेजने और निपटान के बाद प्रतिक्रिया देने के लिए नागरिक इस संदर्भ संख्या का उपयोग कर सकते हैं। सफल पंजीकरण के बाद, संदर्भ स्वचालित रूप से निपटान के लिए संबंधित अधिकारी को भेज दिया जाएगा।"
        android:layout_below="@+id/imageView3"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/magic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:text="©copyright 2017"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3"
        android:layout_marginLeft="58dp"
        android:layout_marginStart="58dp" />


</RelativeLayout>
